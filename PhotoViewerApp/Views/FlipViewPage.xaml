<Page
    x:Class="PhotoViewerApp.Views.FlipViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PhotoViewerApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <local:DetailsBar DataContext="{x:Bind ViewModel.DetailsBarModel}"/>

        <local:MediaFlipView Grid.Row="1" DataContext="{x:Bind ViewModel.FlipViewModel}"/>

        <local:FlipViewPageCommandBar Grid.Row="2" DataContext="{x:Bind ViewModel.CommandBarModel}"/>
    </Grid>
</Page>
