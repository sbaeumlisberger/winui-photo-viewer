<UserControl
    x:Class="PhotoViewer.App.Controls.SelectionRect"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PhotoViewer.App.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    MinWidth="4" MinHeight="4">

    <Grid>
        <Rectangle
            x:Name="rect"
            Fill="Transparent"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            PointerPressed="OnPointerPressed"/>

        <Rectangle            
            x:Name="borderLeft"           
            Width="{x:Bind StrokeThickness}"         
            HorizontalAlignment="Left"
            VerticalAlignment="Stretch"
            Fill="White"
            Stroke="Transparent"
            StrokeThickness="4"
            PointerPressed="OnPointerPressed"
            RenderTransformOrigin="0,0.5"/>

        <Rectangle
            x:Name="borderTop"    
            Height="{x:Bind StrokeThickness}"          
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Fill="White"
            Stroke="Transparent"
            StrokeThickness="4"
            PointerPressed="OnPointerPressed"
            RenderTransformOrigin="0.5,0"/>

        <Rectangle
            x:Name="borderRight"           
            Width="{x:Bind StrokeThickness}"            
            HorizontalAlignment="Right"
            VerticalAlignment="Stretch"
            Fill="White"
            Stroke="Transparent"
            StrokeThickness="4"
            PointerPressed="OnPointerPressed"
            RenderTransformOrigin="1,0.5"/>

        <Rectangle
            x:Name="borderBottom"           
            Height="{x:Bind StrokeThickness}"         
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Fill="White"
            Stroke="Transparent"
            StrokeThickness="4"
            PointerPressed="OnPointerPressed"
            RenderTransformOrigin="0.5,1"/>

        <Ellipse
            x:Name="cornerLeftTop"
            Width="{x:Bind CornerSize}"
            Height="{x:Bind CornerSize}"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="White"
            PointerPressed="OnPointerPressed"
            Stroke="Black"
            RenderTransformOrigin="0,0"/>

        <Ellipse
            x:Name="cornerRightTop"
            Width="{x:Bind CornerSize}"
            Height="{x:Bind CornerSize}"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Fill="White"
            PointerPressed="OnPointerPressed"
            Stroke="Black"
            RenderTransformOrigin="1,0"/>

        <Ellipse
            x:Name="cornerRightBottom"
            Width="{x:Bind CornerSize}"
            Height="{x:Bind CornerSize}"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Fill="White"
            PointerPressed="OnPointerPressed"
            Stroke="Black"
            RenderTransformOrigin="1,1"/>

        <Ellipse
            x:Name="cornerLeftBottom"
            Width="{x:Bind CornerSize}"
            Height="{x:Bind CornerSize}"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Fill="White"
            PointerPressed="OnPointerPressed"
            Stroke="Black"
            RenderTransformOrigin="0,1"/>
    </Grid>
</UserControl>
